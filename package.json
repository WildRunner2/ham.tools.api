{
  "name": "sp3fck-ham-tools-api",
  "version": "1.0.0",
  "description": "Backend API for SP3FCK Ham Tools - Amateur Radio photo gallery and QRZ.com integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:init": "wrangler d1 execute ham-tools-db --file=./schema.sql",
    "db:migrate": "wrangler d1 migrations apply ham-tools-db"
  },
  "keywords": [
    "ham-radio",
    "amateur-radio",
    "qrz",
    "photography",
    "api",
    "cloudflare",
    "d1-database"
  ],
  "author": "SP3FCK",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250902.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "wrangler": "^3.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
